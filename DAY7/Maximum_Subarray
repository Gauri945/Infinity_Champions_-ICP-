class Solution {
    public int maxSubArray(int[] arr) {
       int n=arr.length;
       int max= Integer.MIN_VALUE;
       int curr=0;
       for(int i=0;i<n;i++){
           curr+=arr[i];
          max=Math.max(curr,max);

          if(curr<0) curr=0;
       }
       return max;

    }
}